<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="1000.0" styleClass="container" xmlns="http://javafx.com/javafx/8.0.121"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="info.tylerbauer.rpislideshow.controllers.MainController">
   <stylesheets>
      <URL value="@views/style.css" />
   </stylesheets>
   <children>
      <Region fx:id="pictureFrame" styleClass="imageContainer" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="250.0" AnchorPane.topAnchor="0" />
      <VBox prefWidth="250.0" styleClass="rightPane" AnchorPane.bottomAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0" HBox.hgrow="NEVER">
         <children>
             <fx:include fx:id="current" source="views/currentWeather.fxml" />
             <fx:include fx:id="day1" source="views/weatherForecast.fxml" VBox.vgrow="ALWAYS" />
             <fx:include fx:id="day2" source="views/weatherForecast.fxml" VBox.vgrow="ALWAYS" />
             <fx:include fx:id="day3" source="views/weatherForecast.fxml" VBox.vgrow="ALWAYS" />
             <fx:include fx:id="day4" source="views/weatherForecast.fxml" VBox.vgrow="ALWAYS" />
             <fx:include fx:id="day5" source="views/weatherForecast.fxml" VBox.vgrow="ALWAYS" />
             <fx:include fx:id="day6" source="views/weatherForecast.fxml" VBox.vgrow="ALWAYS" />
         </children>
      </VBox>
   </children>
</AnchorPane>
